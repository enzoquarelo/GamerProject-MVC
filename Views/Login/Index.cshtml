@model Jogador

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamerProject_MVC</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/Header-Footer.css">
</head>

<body>
    <main class="fundo-login">
        <div class="bkg-login">
            <form class="frm-login" method="post" action='@Url.Action("Logar")'>
                <div class="login-title">
                    <hr class="login-line">
                    <h1>Login</h1>
                </div>
                <div class="frm-linha">
                    <div class="bkg-input">
                        <img src="~/assets/vector-user.svg" alt="ícone de usuário">
                        <input type="email" name="Email" id="email" placeholder="Digite seu e-mail:" required>
                    </div>
                </div>
                <div class="frm-linha">
                    <div class="bkg-input">
                        <img src="~/assets/vector-key.svg" alt="ícone de chave">
                        <input type="password" name="Senha" id="password" placeholder="Digite sua senha:" required>
                    </div>
                </div>

                <button class="btn-logar" type="submit">Logar</button>
            </form>
        </div>

    </main>
</body>