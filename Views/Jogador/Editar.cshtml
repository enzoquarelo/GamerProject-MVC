@model Jogador

@{
    ViewData["Tittle"] = "Jogador";
}

<h1>Editar Jogador</h1>

<form method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data">

    <label for=""></label>
    <input type="hidden" name="IdEquipe">
    <label for=""></label>
    <input type="hidden" name="IdJogador" value="@ViewBag.jogador.IdJogador">

    <label for="">Nome</label>
    <input type="text" name="Nome" value="@ViewBag.Jogador.Nome" required>

    <label for="">Email</label>
    <input type="text" name="Email" value="@ViewBag.Jogador.Email">

    <label for="">Equipe</label>
    <select class="form-control" name="IdEquipe">
        
        <option value="">Selecione</option>

        @foreach (var equipe in ViewBag.Equipe)
        {
            
            <option value="@equipe.IdEquipe">@equipe.Nome</option>
        
        }

    </select>

    <button type="submit">Atualizar</button>


</form>